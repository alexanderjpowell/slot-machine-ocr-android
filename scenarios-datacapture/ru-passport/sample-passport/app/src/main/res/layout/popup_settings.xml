<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:text="@string/prompt_type_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_setting_message"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:entries="@array/prompt_types"
        android:spinnerMode="dialog"
        android:id="@+id/hint_spinner"/>

    <Button
        android:text="@string/settings_ok_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_ok_button"/>
</LinearLayout>