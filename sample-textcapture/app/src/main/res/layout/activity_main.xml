<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recognitionLanguageSpinner"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="15dp"
        android:background="#00000000"
        android:popupBackground="#BB000000"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />
    <TextView
        android:id="@+id/warningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#FFFF0000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text=""/>
    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#FFFF0000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/warningText"
        android:text=""/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/startButton"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/progressive1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$XX.XX"
                android:layout_centerHorizontal="true"
                android:textSize="40dp"
                android:textColor="#27af2d"
                android:layout_above="@+id/progressive2" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/clearProgressive1"
                android:onClick="clearProgressive"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/progressive2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$XX.XX"
                android:layout_centerHorizontal="true"
                android:textSize="40dp"
                android:textColor="#27af2d"
                android:layout_above="@+id/progressive3" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/clearProgressive2"
                android:onClick="clearProgressive"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/progressive3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$XX.XX"
                android:layout_centerHorizontal="true"
                android:textSize="40dp"
                android:textColor="#27af2d"
                android:layout_above="@+id/progressive4" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/clearProgressive3"
                android:onClick="clearProgressive"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/progressive4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$XX.XX"
                android:layout_centerHorizontal="true"
                android:textSize="40dp"
                android:textColor="#27af2d"
                android:layout_above="@+id/startButton" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/clearProgressive4"
                android:onClick="clearProgressive"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/progressive5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$XX.XX"
                android:layout_centerHorizontal="true"
                android:textSize="40dp"
                android:textColor="#27af2d"
                android:layout_above="@+id/startButton" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/clearProgressive5"
                android:onClick="clearProgressive"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#7d010000"
        android:layout_marginBottom="5dp"
        android:onClick="onStartButtonClick" />

</RelativeLayout>